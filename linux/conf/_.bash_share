export EDITOR=vim

# Prompt setup
# user
if [ $(whoami) = root ]; then
	export PS1='\[\033[1;31m\][\[\033[0m\]\u\[\033[1;31m\]]\[\033[0m\] '
else
	export PS1=''
fi
export PS1=$PS1'\[\033[1;31m\]$\[\033[0m\] '
export PS1=$PS1'${PWD}\[\033[1;31m\]:\[\033[0m\] '

PS2='>> '

case $(hostname) in
Marisol)
	tmux_force="force"
	;;
default)
	tmux_force=""
	;;
esac

[ -r  ~/.bash_local ] && source ~/.bash_local
#tmux-go $tmux_force
